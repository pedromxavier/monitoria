\newcommand{\copias}[2]{
\begingroup
	\newcount\foo
	\foo=#2
	\loop
	  #1
	  \advance \foo -1
	\ifnum \foo>0
	\repeat
\endgroup
}

\newcommand{\problem}[2][1]{
	\addtocounter{subsection}{+1}
	~\\
	{\large\bfseries \arabic{section}.\arabic{subsection} - #2 [\copias{$\star$}{#1}]}\\
	\addcontentsline{toc}{subsection}{\arabic{section}.\arabic{subsection} - #2 [\copias{$\star$}{#1}]}
}

\newcommand{\chap}[1]{
	\pagebreak
	\section{#1}
}

